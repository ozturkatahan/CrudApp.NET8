@{
}

@model CrudApp.Web.Models.Entities.Student

<h1>Edit Student</h1>

@if (Model is null)
{
    <p>No student was found with this Id</p>
}

else
{
    <form method="post">

    <div class="mt-3">
    <label class="form-label">Id</label>
    <input type="text" class="form-control" asp-for="Id" readonly></input>
    </div>

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name"></input>
    </div>

    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Email"></input>
    </div>

    <div class="mt-3">
        <label class="form-label">Phone</label>
        <input type="text" class="form-control" asp-for="Phone"></input>
    </div>

    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="Subscribed" asp-for="Subscribed"></input>
        <label class="form-check-label" for="Subscribed">Subscribed</label>
    </div>


        <div class="mt-3 d-flex">
            <button type="submit" class="btn btn-primary" style="margin-right: 20px;">Save</button>
            <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Students">Delete</button>
        </div>


    </form>

}

